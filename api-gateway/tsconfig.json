{
  "compilerOptions": {
    "target": "ES2020",                           // Modern JS features
    "module": "ESNext",                           // Output as ESM
    "moduleResolution": "node",                   // Resolve like Node.js
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": ["tsup.config.ts"]
}
  
